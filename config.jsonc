{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 45,
    "modules-left": [
        "clock",
        "custom/weather",
        "hyprland/workspaces"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "network",
        "custom/temperature",
        "custom/memory",
        "bluetooth",
        "pulseaudio",
        "hyprland/language"
    ],
    "hyprland/workspaces": {
        "format": "{icon}",
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "format-icons": {
            "1": "1Ô∏è‚É£",
            "2": "2Ô∏è‚É£",
            "3": "3Ô∏è‚É£",
            "4": "4Ô∏è‚É£",
            "5": "5Ô∏è‚É£",
            "6": "6Ô∏è‚É£",
            "7": "7Ô∏è‚É£",
            "8": "8Ô∏è‚É£",
            "9": "9Ô∏è‚É£",
            "10": "üîü"
        },
        "persistent_workspaces": {
            "*": 1
        }
    },
    "hyprland/window": {
        "format": "{}"
    },
    "custom/weather": {
        "tooltip": true,
        "format": "{}",
        "interval": 3600,
        "exec": "~/.config/waybar/scripts/waybar-wttr.py",
        "return-type": "json"
    },

    "custom/temperature": {
        "tooltip": true,
        "format": "üå°Ô∏è {} ¬∞C",
        "interval": 10,
        "exec": "echo $(($(cat /sys/class/thermal/thermal_zone3/temp) / 1000))"
    },
    "custom/memory": {
        "tooltip": true,
        "format": "üíæ {}",
        "interval": 10,
        "exec": "free -h | grep 'Mem:' | sed 's/.*[ ]\\([^[ ]*\\)$/\\1/'"
    },

    "clock": {
        "interval": 60,
        "format": "üïñ {:%H:%M üóìÔ∏è %a, %d %b %Y}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt>{calendar}</tt>"
    },

    "network": {
        "interval": 5,
        "format-wifi": "Ôá´  {signalStrength}%",
        "format": "{ipaddr} üîΩ {bandwidthDownBits} üîº {bandwidthUpBits}",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}:{essid} {ipaddr}/{cidr}"
    },

    "bluetooth": {
        "format": "Ôäî {status}",
        "format-disabled": "", // an empty format will hide the module
        "format-connected": "Ôäî {num_connections}",
        "tooltip-format": "{device_alias}",
        "tooltip-format-connected": "Ôäî {device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}"
    },

    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-muted": "ÔÄ¶",
        "format-icons": {
            "default": ["ÔÄß", "ÔÄ®"]
        },
        "scroll-step": 5,
        "on-click": "pavucontrol",
        "ignored-sinks": ["Easy Effects Sink"]
    },

    "hyprland/language": {
        "format": "‚å®Ô∏è {}",
        "format-en": "English",
        "format-th": "Thai",
        "keyboard-name": "bridge75-2.4g",
        "on-click": "hyprctl switchxkblayout bridge75-2.4g next"
    }

}
